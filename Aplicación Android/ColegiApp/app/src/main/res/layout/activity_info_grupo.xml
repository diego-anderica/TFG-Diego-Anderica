<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoGrupoActivity">

    <ImageView
        android:id="@+id/imgGrupo"
        android:layout_width="94dp"
        android:layout_height="87dp"
        android:layout_marginBottom="499dp"
        android:layout_marginEnd="299dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="299dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/grupo64" />

    <EditText
        android:id="@+id/txtNombreGrupo"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="422dp"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:focusable="false"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgGrupo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnCambiarNombreGrupo"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="2dp"
        android:text="@string/btnCambiarNombreGrupo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGrupo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblIntegrantesGrupo"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginBottom="410dp"
        android:layout_marginEnd="237dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="237dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="@string/lblIntegrantes"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCambiarNombreGrupo"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/lstIntegrantesGrupo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIntegrantesGrupo"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>